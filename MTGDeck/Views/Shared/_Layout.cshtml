<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>MTGDeck</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Poppins:wght@200&family=Roboto+Slab:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <div class="container mt-3">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <div class="circles">
            <img src="~/images/circle_full_set.svg" alt="Elemental globes(don't sue me)" class="center" />
          </div>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                @Html.ActionLink("Login", "Index", "Account", null, new { @class = "nav-link"})
              </li>
              <li class="nav-item">
                @Html.ActionLink("Cards", "Index", "Cards", null, new { @class = "nav-link"})
              </li>
              <li class="nav-item">
                @Html.ActionLink("Decks", "Index", "Decks", null, new { @class = "nav-link"})
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <hr size="3" width="100%" color="black" class="mr-5">  
      @RenderBody()
    </div>
  </body>
</html>