<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>MTGDeck</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <div class="container-fluid">
      <nav style="padding: 10px; margin-top: 2px;" class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#" id="circles"><img src="~/images/circle_full_set.svg" alt="Elemental globes(don't sue me)" class="center" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              @Html.ActionLink("Home", "Index", "Account", null, new { @class = "nav-link"})
            </li>
            <li class="nav-item">
              @Html.ActionLink("Cards", "Index", "Cards", null, new { @class = "nav-link"})
            </li>
            <li class="nav-item">
              @Html.ActionLink("My Decks", "Index", "Decks", null, new { @class = "nav-link"})
            </li>
          </ul>
        </div>
      </nav>
      <br>
      @RenderBody()
    </div>
  </body>
</html>