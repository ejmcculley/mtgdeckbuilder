@{
  Layout = "_Layout";
}

@using MTGDeck.Models;
@model List<Card>

<h3>Search Results:</h3>
    @if (Model.Count() != 0)
    {
      @foreach (Card card in Model)
      {
        <div class="card-content">
          <p>@Html.ActionLink($"{card.Name}", "Details", new { name = card.Name })</p>
          <p>@card.Type_Line</p>
          <p>@card.Set_Name</p>
          <p>@card.Mana_Cost</p>
        </div>
      }
    }
    else
    {
      <p>"No cards found!"</p>
    }



