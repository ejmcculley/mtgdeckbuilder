@{
  Layout = "_Layout";
}

@using System.Security.Claims

<h1>Login</h1>

<p>Welcome to Magic the Gathering fantasy deck builder. You must create an account to build and save your decks. Registration is free, but if that's too much of a drag, you can browse cards without an account @Html.ActionLink("Here", "Index", "Cards").</p>

<h2>Get started by logging in or creating a free account!</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}
<p>@Html.ActionLink("Home", "Index", "Home")</p>