@{
  Layout = "_Layout";
}

@model MTGDeck.Models.Deck
<div class="content">
<h3 class="page-title">Create Deck</h3>
<hr />
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name, "")
    @Html.TextBoxFor(model => model.Name, new { @style = "width:250px;", @class = "form-control", placeholder = "Name", required = "required"})
  </div>
  <br>
  <div>
    <input type="submit" value="Add deck" class="btn btn-success btn-sm" />
  </div>
}
</div>
