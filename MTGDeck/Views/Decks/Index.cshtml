@{
  Layout = "_Layout";
}

@using MTGDeck.Models;
@model IEnumerable<MTGDeck.Models.Deck>

<h3 class="page-title">My Decks</h3>

<div class="content">
@if (Model.Any())
{
  <ul>
    @foreach (Deck deck in Model)
    {
      <li>@Html.ActionLink($"{deck.Name}", "Details", new { id = deck.DeckId })</li>
    }
  </ul>
  <br>
} 
else
{
  <h4></h4>
}
@Html.ActionLink("+New Deck", "Create", null, routeValues: null, htmlAttributes: new { @class="btn btn-success btn-sm" }) 
</div>