@{
  Layout = "_Layout";
}

@model MTGDeck.Models.Deck;

<h2>@Html.DisplayFor(model => model.Name)</h2>
<p>@Html.ActionLink("Edit", "Edit", new { id = Model.DeckId }) @Html.ActionLink("Delete", "Delete", new { id = Model.DeckId })</p>

<div class="content">
@if(@Model.JoinEntities.Count == 0)
{
  <p>This deck is empty</p>
}
else
{
  <h4>Cards in this deck:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Card.Name</li>
  }
  </ul>
}
</div>