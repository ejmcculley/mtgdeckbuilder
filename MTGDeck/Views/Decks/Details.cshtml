@{
  Layout = "_Layout";
}

@model MTGDeck.Models.Deck;

<h2>Deck Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This deck is empty</p>
}
else
{
  <h4>Cards in this deck:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Card.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to deck list", "Index")</p>
<p>@Html.ActionLink("Edit this deck", "Edit", new { id = Model.DeckId })</p>
<p>@Html.ActionLink("Delete this deck", "Delete", new { id = Model.DeckId })</p>